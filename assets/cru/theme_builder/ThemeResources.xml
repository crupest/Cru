<Theme>
    <Resource key="text.font">
        <Font size="16" />
    </Resource>

    <Resource key="cru.theme_builder.icon-button.style">
        <StyleRuleSet>
            <StyleRule>
                <NoCondition />
                <PreferredSizeStyler width="20" height="20" />
                <BorderStyler>
                    <BorderStyle>
                        <Thickness value="0" />
                    </BorderStyle>
                </BorderStyler>
                <MarginStyler value="10 0 0 0" />
                <CursorStyler>
                    <Cursor value="hand" />
                </CursorStyler>
            </StyleRule>
        </StyleRuleSet>
    </Resource>

    <Resource key="cru.theme_builder.color_cube.style">
        <StyleRuleSet>
            <StyleRule>
                <NoCondition />
                <PreferredSizeStyler width="20" height="20" />
                <BorderStyler>
                    <BorderStyle>
                        <Color value="black" />
                        <Thickness value="1" />
                    </BorderStyle>
                </BorderStyler>
                <MarginStyler value="10 0 0 0" />
            </StyleRule>
        </StyleRuleSet>
    </Resource>
</Theme>
